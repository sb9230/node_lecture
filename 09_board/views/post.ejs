<!DOCTYPE html>
<html>
<head>
    <%- include ("./head.ejs") %>
</head>
<body>
    <%- include ("./nav.ejs") %>
    <div class="container">
        <div class="form-group">
            <label for="inputUser">작성자</label>
            <input 
                disabled type="text" class="form-control" id="inputUser" 
                value="<%= post.email %>" />
        </div>
        <div class="form-group">
            <label for="inputTitle">제목</label>
            <input 
                disabled type="text" class="form-control" id="inputTitle" 
                value="<%= post.title %>" />
        </div>
        <div class="form-group">
            <label for="inputContents">내용</label>
            <textarea 
                disabled class="form-control" id="inputContents" 
                rows="10"><%= post.contents %></textarea>
        </div>
        <a href="/posts">
            <button type="button" class="btn btn-primary">목록보기</button>
        </a>
        <% if (post.user_id == user.id) { %>
            <a href="/post/edit/<%= post.post_id %>">
                <button type="button" class="btn btn-secondary">수정</button>
            </a>
            <a href="/post/delete/<%= post.post_id %>">
                <button type="button" class="btn btn-danger">삭제</button>
            </a>
        <% } %>
    </div>
    <div class="container" style="margin-top: 50px;">
        <form action="/comment/<%= post.post_id %>" method="POST">
            <div class="form-group">
                <label for="inputComment">댓글 작성</label>
                <textarea class="form-control" name="desc" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">완료</button>
        </form>
    </div>
    <div class="container" style="margin-top: 50px;">
        <% for (var comment of comments) { %>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <h6><strong><%= comment.email %> 님의 댓글</strong></h6>
                    </td>
                </tr>
                <tr>
                    <td>
                        <textarea 
                            disabled 
                            class="form-control" 
                            rows="3"><%= comment.description %></textarea>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
